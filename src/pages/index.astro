---
import Layout from "../layouts/Layout.astro";
import Presentation from "../components/Presentation.astro";
import "../styles/global.css";
import About from "../components/About.astro";
import Projects from "../components/Projects.astro";
import Experiences from "../components/Experiences.astro";
import "@fontsource/handlee";
import "@fontsource-variable/inter";
---

<Layout>
  <Presentation />
  <h1 class="font-hand text-white text-8xl mt-24 mb-6">About me</h1>
  <About />
  <h1 class="font-hand text-white text-8xl mt-24 mb-6">Projects</h1>
  <Projects />
  <article class="w-full grid place-content-center">
    <div
      class="flex flex-row bg-white w-48 p-5 mt-28 justify-around rounded-2xl gap-3"
    >
      <a
        target="_blank"
        href="https://github.com/EricB-59?tab=repositories"
        class="text-2xl font-hand">Repositories</a
      >
      <img src="iconTech/tech-github.svg" />
    </div>
  </article>

  <h1 class="font-hand text-white text-8xl mt-24 mb-6">Experiences</h1>
  <Experiences />
</Layout>
