---
import { Image } from "astro:assets";
import src from '../../assets/Swanest.png';

const { tittle, time, text } = Astro.props;
---
<section class="bg-white rounded-lg px-5 py-3 drop-shadow-[5px_5px_2px_rgba(119,153,120,100)] static h-120 overflow-hidden">
    <div class="rounded-lg w-72 overflow-hidden ">
        <Image src={src} alt="" class="rounded-xl "></Image>
    </div>
    <h2 class="mb-5 text-7xl font-[Edu_TAS_Beginner]">{tittle}</h2>
    <p class="mb-5 text-3xl font-[Edu_TAS_Beginner]">{text}</p>
    <p class="">{time}</p>
</section>