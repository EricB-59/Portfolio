---
import TechCard from './TechCard.astro'
const { tittle, time, text, src } = Astro.props;

---

<article class="grid grid-cols-2 gap-20">
    <div class="bg-white p-5 rounded-2xl">
        <img src={src} alt="">
    </div>
    <div class="flex flex-col justify-between">
        <h1 class="font-inter text-6xl text-white font-bold">{tittle}</h1>
        <p class="font-inter text-white text-3xl">{text}</p>
        <div class="flex flex-row gap-5">
            <TechCard icon="iconTech/tech-angular.svg" name="Angular"></TechCard>
            <TechCard icon="iconTech/tech-symfony.svg" name="Symfony"></TechCard>
            <TechCard icon="iconTech/tech-tailwind.svg" name="Tailwind"></TechCard>
        </div>
    </div>
</article>